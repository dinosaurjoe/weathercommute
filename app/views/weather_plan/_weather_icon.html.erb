<% case weather.type_code %>
<% when 200 %>
  <div class="icon thunder-storm">
    <div class="cloud"></div>
    <div class="lightning">
      <div class="bolt"></div>
      <div class="bolt"></div>
    </div>
  </div>
<% when 500 %>
  <div class="icon rainy">
    <div class="cloud"></div>
    <div class="rain"></div>
  </div>
<% when 600 %>
<div class="icon flurries">
  <div class="cloud"></div>
  <div class="snow">
    <div class="flake"></div>
    <div class="flake"></div>
  </div>
</div>
<% when 700%>
<div class="icon cloudy">
  <div class="cloud"></div>
  <div class="cloud"></div>
</div>
<% when 800 %>
<div class="icon cloudy">
  <div class="cloud"></div>
  <div class="cloud"></div>
</div>
<% else %>
  <div class="icon sunny">
    <div class="sun">
      <div class="rays"></div>
    </div>
  </div>
<% end %>